<%= form_for([:admin, feedback, @reply]) do |f| %>

  <%= f.label :message %><br>
  <div class="field input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
    <%= f.text_area :message, as: :text, requred: true, size: "34x5", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Ответить на обращение', :class=> "btn btn-primary btn-block" %>
  </div>
<% end %>
